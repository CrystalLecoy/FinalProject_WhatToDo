@model FinalProject_WhatsAPPening.Models.Request
@{
    ViewBag.Title = "What would you like to do?";
}
<h2>What would you like to do?</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enter the number of people, budget, and cuisine choice:</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Budget, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Budget, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="foodDropdown">Cuisine</label>
            <div class="col-md-10">
                <select class="form-control" name="foodDropdown" id="foodDropdown">
                    <option value="american" selected>American</option>
                    <option value="italian">Italian</option>
                    <option value="seafood">Seafood</option>
                    <option value="mexican">Mexican</option>
                    <option value="vegetarian">Vegetarian</option>
                    <option value="southern">Southern</option>
                    <option value="asian">Asian</option>
                </select>
                <span class="field-validation-valid text-danger" data-valmsg-for="CuisineType" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Go!" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
